class UsersController < ApplicationController

  def new
    @buyer = Buyer.new
  end

  def create
    @buyer = Buyer.new(buyer_params)
    session[:buyer_id] = @buyer.id
    redirect_to listings_path
  end

private
  def buyer_params
    params.require(:user).permit(:user_name, :password, :password_confirmation)
  end
end
