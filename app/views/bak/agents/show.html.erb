
<h2>Agent Details</h2>

  <h3>Agent: <%= @agent.user.first_name + " " + @agent.user.last_name %></h3>

  <h3>Agency: <%= @agent.agency %>

  <h3>Years of Experience: <%= @agent.years_exp %>

  <h2>Contact

  <h3>Phone: <%= @agent.user.phone %>

  <h3>Email: <%= @agent.user.email %>

  <!--render delete button-->
  <p><%= form_for(@agent, :html => { :method => :delete, :remote => true }) do |f| %>
    <%= f.submit :value => "Delete" %>
  <%end%></p>

  <!--render edit button-->
  <%= button_to "Edit", { :action => "edit" }, :method => :get %>
