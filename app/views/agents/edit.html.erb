
<h2>Edit Agent Details</h2>


<%= form_for(@agent) do |f| %>
  <p><label>First Name:</label>
  <%#= f.text_field :agent.user.first_name %></p>

  <p><label>Last Name:</label>
  <%#= f.text_field :@agent.user.last_name %></p>

  <p><label>Agency:</label>
  <%= f.text_field :agency %></p>

  <p><label>Years of Experience:</label>
  <%= f.text_field :years_exp %></p>

  <p><label>Email:</label></p>
  <%#= f.text_field :@agent.user.email %>

  <p><label>Phone:</label></p>
  <%= f.text_field :agent.user.phone  %>

  <%= f.submit %>
<% end %>
