
<h2>Edit Listings Details</h2>

<%= form_for(@listing) do |f| %>

    <%= f.text_field :house_pic %></p>

    <p><label>Title:</label>
    <%= f.text_field :title %></p>

    <p><label>Price:</label>
    <%= f.number_field :price %></p>

    <p><label>House Number:</label>
    <%= f.number_field :house_number %></p>

    <p><label>Street:</label>
    <%= f.text_field :street %></p>

    <p><label>State:</label>
    <%= f.text_field :state %></p>

    <p><label>City:</label>
    <%= f.text_field :city %></p>

    <p><label>Zip:</label>
    <%= f.text_field :zip %></p>

    <p><label>Date Listed:</label>
    <%= f.date_field :date_listed %></p>

    <p><label>Date Sold:</label>
    <%= f.date_field :date_sold %></p>

    <p><label>Description:</label>
    <%= f.text_area :description %></p>

    <p><label>Agent:</label>
    <%= f.number_field :agent_id %></p>

    <p><label>Zip:</label>
    <%= f.text_field :zip %></p>

    <%= f.submit %>


<% end %>
