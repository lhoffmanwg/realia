
<h2>Add a New Buyer</h2>


<%= form_for(@buyer) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>

  <%= f.label :email %>
  <%= f.email_field :email %><br>

  <%= f.label :phone %>
  <%= f.text_field :phone %><br>

  <%= f.label :budget %>
  <%= f.number_field :budget %><br>

  <%= f.label :number_of_bedrooms %>
  <%= f.number_field :bedrooms %><br>

  <%= f.label :number_of_bathrooms %>
  <%= f.number_field :bathrooms  %><br>

<%= f.submit %>
<% end %>
