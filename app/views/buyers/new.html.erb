
<h2>Add a New Buyer</h2>


<%= form_for(@buyer) do |f| %>
  <p><label>Name:</label>
  <%= f.text_field :name %></p>

  <p><label>Email:</label>
  <%= f.email_field :email %></p>

  <p><label>Phone:</label>
  <%= f.text_field :phone %></p>

  <p><label>Budget:</label>
  <%= f.number_field :budget %></p>
    <%#= f.collection_select :user_id, User.all, :id, :first_name%>

  <p><label>Number of Bedrooms:</label>
  <%= f.number_field :bedrooms %></p>

  <p><label>Number of Bathrooms:</label>
  <%= f.number_field :bathrooms  %></p>

  <%= f.submit %>
<% end %>
